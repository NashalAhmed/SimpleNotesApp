@model List<string>

<h1>Simple Notes App v1</h1>

<form method="post" action="/Home/Add">
    <input type="text" name="note" required />
    <button type="submit">Add</button>
</form>

<ul>
@for (int i = 0; i < Model.Count; i++)
{
    <li>
        @Model[i]
        <a href="/Home/Delete/@i">Delete</a>
    </li>
}
</ul>